<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
	<h1>User signup</h1>
	<br />
	<%= form_for @user do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	  <%= f.label :name %>
	  <%= f.text_field :name, class: 'form-control' %>

	  <%= f.label :email %>
	  <%= f.email_field :email, class: 'form-control' %>

	  <br />
	  <%= f.submit "Signup", class: 'btn btn-info' %>
	<% end %>
  </div>
</div>
