<%= form_for @event do |f| %>

  <%= f.label :title, class: 'sep-fixed' %>
  <%= f.text_field :title, class: 'form-control', placeholder: 'Ruby meetup' %>

  <%= f.label :description, class: 'sep-fixed' %>
  <%= f.text_area :description, class: 'form-control', rows: 7, placeholder: 'Is a meetup to talk about the Ruby programming language and it\'s applications' %>

  <%= f.label :date, class: 'sep-fixed' %>
  <%= f.date_field :date, class: 'form-control', placeholder: '10/21/2017 15:30pm'%>

  <%= f.label :location, class: 'sep-fixed' %>
  <%= f.text_field :location, class: 'form-control', placeholder: 'Some place!' %>

  <%= f.submit "Create event", class: 'btn btn-success sep-fixed' %>
<% end %>
